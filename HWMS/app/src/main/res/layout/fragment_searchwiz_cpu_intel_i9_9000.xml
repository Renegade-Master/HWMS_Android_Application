<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.searchwizard.SearchWizHomeFragment">

    <TextView
        android:id="@+id/textview_searchwiz_selectcomponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Lorem Ipsum"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/scrollview_searchwiz_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollview_searchwiz_selector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/button_searchwiz_previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_searchwiz_selectcomponent">

        <RadioGroup
            android:id="@+id/radiogrp_searchwiz_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_searchwiz_selectcomponent"
            tools:layout_constraintBottom_toTopOf="@id/button_searchwiz_previous"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintTop_toBottomOf="@id/textview_searchwiz_selectcomponent">

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9820x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9820X"
                android:text="@string/label_cpu_intel_i9_9820x" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9900"
                android:text="@string/label_cpu_intel_i9_9900" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9900k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9900K"
                android:text="@string/label_cpu_intel_i9_9900k" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9900kf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9900KF"
                android:text="@string/label_cpu_intel_i9_9900kf" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9900ks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9900KS"
                android:text="@string/label_cpu_intel_i9_9900ks" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9900t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9900T"
                android:text="@string/label_cpu_intel_i9_9900t" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9900x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9900X"
                android:text="@string/label_cpu_intel_i9_9900x" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9920x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9920X"
                android:text="@string/label_cpu_intel_i9_9920x" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9940x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9940X"
                android:text="@string/label_cpu_intel_i9_9940x" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9960x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9960X"
                android:text="@string/label_cpu_intel_i9_9960x" />

            <RadioButton
                android:id="@+id/radiobtn_cpu_intel_i9_9980xe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9980XE"
                android:text="@string/label_cpu_intel_i9_9980xe" />
        </RadioGroup>
    </ScrollView>

    <Button
        android:id="@+id/button_searchwiz_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollview_searchwiz_selector" />

    <Button
        android:id="@+id/button_searchwiz_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollview_searchwiz_selector" />
</androidx.constraintlayout.widget.ConstraintLayout>
